<script>
$(document).ready(function(){
  $(document).tooltip();
});
</script>

<script>
$(document).ready(function(){
  $('.send-email-btn').tooltip();
});
</script>


<script>
$(document).ready(function(){
  $('.send-email-btn').tooltip({
    position: {
      my: "center top", // The top middle of the tooltip will be aligned...
      at: "center bottom", // ...to the bottom middle of the target element.
      collision: "none" // This prevents the tooltip from being repositioned if it collides with the window edges.
    }
  });
});
</script>


